{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "lib": ["es6", "dom"],
    "outDir": "build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["src/api/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@store/*": ["src/store/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "server/**/*.ts",  "server/**/*.tsx"],
  "exclude": ["node_modules"]
}
