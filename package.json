{
  "name": "zooma",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "14.15.1",
    "npm": "6.14.8"
  },
  "scripts": {
    "start": "npm run ssr:start",
    "build": "npm run ssr:build",
    "dev": "npm run ssr:dev",
    "spa:dev": "npx webpack serve",
    "spa:start": "node server.js",
    "spa:build": "npx webpack --node-env='production'",
    "ssr:dev": "node scripts/dev.js",
    "ssr:start": "export POSTGRES_HOST=postgres; if [ ! -f /shared/.initialized ]; then npm run db:init && touch /shared/.initialized; fi && node ssr/server/server.js",
    "ssr:build": "npx webpack -c webpack.ssr.js --node-env='production'",
    "typecheck": "npx tsc --noEmit",
    "lint:ts": "npx eslint --ext .tsx,.ts src/",
    "lint:style": "npx stylelint \"src/**/*.css\"",
    "lint": "npm-run-all lint:*",
    "prettier:write": "npx prettier --write \"src/.\" \"server/.\"",
    "prettier:check": "npx prettier --check \"src/.\" \"server/.\"",
    "test": "npx jest",
    "db:generate": "npx prisma generate",
    "db:init": "until npx prisma migrate dev && npx prisma db seed --preview-feature; do echo ...; sleep 1; done",
    "db:postinstall": "export POSTGRES_HOST=localhost; docker-compose up -d postgres && npm run db:init; docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monaco-software/zooma.git"
